                android:text="Rookie"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/image3"
                android:layout_below="@+id/image3"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Star"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/image7"
                android:layout_below="@+id/image7"
                android:fontFamily="@font/source_sans_pro"
                android:text="Superstar"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image4"
                android:fontFamily="@font/source_sans_pro"
                android:text="Winner"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/textView15"
                android:layout_below="@+id/textView15"
                app:srcCompat="@drawable/badge_efficient" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/image5"
                android:layout_below="@+id/image5"
                android:fontFamily="@font/source_sans_pro"
                android:text="Efficient"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textView23"
                android:layout_alignStart="@+id/image3"
                app:srcCompat="@drawable/badge_not_efficient" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/textView20"
                android:layout_alignStart="@+id/textView23"
