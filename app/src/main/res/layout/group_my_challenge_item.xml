<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/profileLinear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day left"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/profPic_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_can"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtFriendName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can TÃ¼rker"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/descriptionLinear1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"

                android:gravity="center"
                android:layout_toEndOf="@+id/profileLinear1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDescription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/bree_serif"
                    android:text="Get a 5 star rating on your next trip to REWE"
                    android:textAllCaps="false"
                    android:textColor="@color/fbutton_color_midnight_blue"
                    tools:fontFamily="@font/bree_serif" />

                <TextView
                    android:id="@+id/txtwin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/bree_serif"
                    android:text="Congratulations you are on the lead"
                    android:textColor="@color/fbutton_color_asbestos" />


                <Button
                    android:id="@+id/expandableButton1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_with_shape"
                    android:text="See more Details"
                    tools:text="See more Details" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
