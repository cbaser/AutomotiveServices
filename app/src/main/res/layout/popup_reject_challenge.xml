<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/sure_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignEnd="@+id/tips_cardview"
            android:layout_below="@+id/tips_cardview"
            android:background="@color/fbutton_color_midnight_blue"
            android:padding="16dp">

            <Button
                android:id="@+id/rejectSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/bree_serif"
                android:text="REJECT" />

            <TextView
                android:id="@+id/sure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/bree_serif"
                android:paddingBottom="5dp"
                android:text="Are you sure!"
                android:textColor="@color/colorLeaGreen"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sure_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/closeRejectChallange"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bree_serif"
                android:text="You will lose 250 points by rejecting this challenge!"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/acceptSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:background="@color/light_green"
                android:fontFamily="@font/bree_serif"
                android:text="Go Back" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/closeRejectChallange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                app:backgroundTint="@color/fbutton_color_midnight_blue"
                app:srcCompat="@android:drawable/ic_delete" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>