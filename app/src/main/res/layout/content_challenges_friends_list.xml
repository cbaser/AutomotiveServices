<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_innerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/friendPic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/cagatay_icon"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/icItem7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/imageView"
            android:cropToPadding="false"
            android:visibility="visible"
            app:srcCompat="@drawable/can_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/icItem7"
            android:layout_below="@+id/icItem7"
            android:layout_marginStart="21dp"
            android:text="Can"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Can" />

        <TextView
            android:id="@+id/tv_av_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvMileage"
            android:layout_below="@+id/tvMileage"
            android:text="19344"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#727272"
            android:textSize="12sp"
            tools:ignore="HardcodedText"
            tools:text="19344" />

        <TextView
            android:id="@+id/friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/friendPic"
            android:layout_marginStart="11dp"
            android:text="Cagatay"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#212121"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/friendScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_av_distance"
            android:layout_alignBottom="@+id/tv_av_distance"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:text="99999"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#727272"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/friendPic"
            app:srcCompat="@drawable/lea_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/hampus_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/friendName"
            android:layout_alignBottom="@+id/friendName"
            android:layout_alignStart="@+id/imageView"
            android:text="Lea"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/friendScore"
            android:layout_alignBottom="@+id/friendScore"
            android:layout_alignStart="@+id/textView"
            android:text="19345"
            android:textColor="#727272"
            tools:text="19345" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView3"
            android:text="Hampus"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_av_distance"
            android:layout_alignStart="@+id/textView3"
            android:text="19343"
            android:textColor="#727272"
            tools:text="19343" />


    </RelativeLayout>


</RelativeLayout>