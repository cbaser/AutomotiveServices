<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bree_serif"
            android:text="Reduce your fuel consumption with 0.4l this week!"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="25dp"
            android:max="7"
            android:minHeight="50dp"
            android:minWidth="400dp"
            android:progress="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_below="@+id/textView13"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/medal_1" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_below="@+id/textView13"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/medal_2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_marginEnd="47dp"
            android:layout_toStartOf="@+id/textView13"
            app:srcCompat="@drawable/ic_hampus" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/textView7"
            app:srcCompat="@drawable/ic_cagatay" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/bree_serif"
            android:text="VS."
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_below="@+id/imageView4"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/bree_serif"
            android:text="You"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/bree_serif"
            android:text="Hampus"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/progressBar"
            android:layout_below="@+id/textView9"
            android:fontFamily="@font/bree_serif"
            android:text="Days"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/bree_serif"
            android:text="3/7"
            android:textColor="@color/black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/description_cardview"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/driving_cardview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/bree_serif"
                    android:paddingBottom="5dp"
                    android:text="Description"
                    android:textColor="@color/light_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fuel_cardview_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/driving_cardview_title"
                    android:layout_below="@+id/driving_cardview_title"
                    android:fontFamily="@font/bree_serif"
                    android:text="Starting Point 8.6l/100km"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fuelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fuel_cardview_description"
                    android:layout_below="@+id/fuel_cardview_description"
                    android:fontFamily="@font/bree_serif"
                    android:text="Current Consumption: 8.5l/100km"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fuel2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/fuelTextView"
                    android:layout_below="@+id/fuelTextView"
                    android:fontFamily="@font/bree_serif"
                    android:text="Target: 8.4 l/100km"
                    android:textColor="@color/black" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/tips_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/description_cardview">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/description_cardview"
                android:background="#fff"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tips_cardview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/bree_serif"
                    android:paddingBottom="5dp"
                    android:text="Tips"
                    android:textColor="@color/light_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tips_cardview_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tips_cardview_title"
                    android:fontFamily="@font/bree_serif"
                    android:text="Try to avoid hard acceleration and breaking"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

