<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/group_friend_relativeLayout"
    android:gravity="center_vertical">

        <ImageView
            android:id="@+id/group_friend_profile_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/profile_picture" />

        <TextView
            android:id="@+id/group_friend_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_friend_profile_icon"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/group_friend_profile_icon"
            android:layout_weight="2"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cagatay Baser"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/group_friend_profile_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_friend_profile_name"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/group_friend_profile_icon"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="1000"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/group_friend_profile_acceptBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="72dp"
            android:visibility="invisible"
            android:background="@drawable/button_change_clicked"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/group_friend_profile_rejectBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:visibility="invisible"
            android:background="@drawable/button_change_clicked"
            android:src="@android:drawable/ic_delete" />

        <include
            layout="@layout/item_divider"
            android:layout_below="@id/group_friend_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>