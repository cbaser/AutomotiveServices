<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/ic_cagatay" />

        <TextView
            android:id="@+id/txtFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewPicture"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/imageViewPicture"
            android:layout_weight="2"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cagatay Baser"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtFriendPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFriendName"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/imageViewPicture"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="1000"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

</RelativeLayout>