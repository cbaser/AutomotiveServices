<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:orientation="vertical"
    android:padding="10px">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:lineSpacingExtra="8sp"
        android:text="Reduce average consumption by 0.5 l/100km"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_challenge_yourself_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:lineSpacingExtra="8sp"
        android:text="Start challenge yourself"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/send_challenge_to_friend_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/start_challenge_yourself_button"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:text="Send challenge to friend"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/join_regional_challenge_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/send_challenge_to_friend_button"
        android:layout_below="@+id/send_challenge_to_friend_button"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:text="Join Regional Challenge"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="25dp"
        android:background="@color/light_yellow">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:enabled="false"
            android:inputType="text|textPersonName"
            android:text="Time: one month"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Points to be scored : 2000"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Your current consumption: 8.4l /100km"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Your target consumption: 7.9l/100km"
            android:textColor="@color/black" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exitFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:backgroundTint="@color/black"
        app:fabSize="mini"
        app:rippleColor="@color/black"
        app:srcCompat="@android:drawable/ic_delete" />

</RelativeLayout>